{
    "app": {
        "name": "Password Generator",
        "description": "A simple password generator web application.",
        "version": "1.0",
        "author": "Sopheaktra Lean"
    },
    "character_sets": {
        "lowercase": {
            "enabled": true,
            "chars": "abcdefghijklmnopqrstuvwxyz"
        },
        "uppercase": {
            "enabled": true,
            "chars": "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        },
        "numbers": {
            "enabled": true,
            "chars": "0123456789"
        },
        "symbols": {
            "enabled": true,
            "chars": "!@#$%^&*"
        }
    },
    "default_settings": {
        "length": 8,
        "use_uppercase": true,
        "use_lowercase": true,
        "use_numbers": true,
        "use_symbols": true
    },
    "routes": {
        "index": {
            "path": "/",
            "method": "GET",
            "description": "Render the main index page."
        },
        "generate_password": {
            "path": "/generate-password",
            "method": "POST",
            "description": "Generate a password based on user input."
        }
    }
}
